{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="space-y-6">
        {% for field in form.children|filter(f => f.vars.name != '_token') %}
            <div class="group">
                <label for="{{ field.vars.id }}" class="block text-sm font-medium text-slate-300 mb-2">
                    {{ field.vars.label|default(field.vars.name|title) }}
                    {% if field.vars.required %}
                        <span class="text-red-400">*</span>
                    {% endif %}
                </label>
                {{ form_widget(field, {'attr': {
                    'class': 'w-full px-4 py-3 bg-slate-700/50 border border-slate-600/50 rounded-xl text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-cyan-500/50 focus:border-cyan-500/50 transition-all duration-200 hover:bg-slate-700/70'
                }}) }}
                {% if field.vars.errors|length > 0 %}
                    <div class="mt-2 flex items-center gap-2 text-red-400 text-sm">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        {{ form_errors(field) }}
                    </div>
                {% endif %}
                {% if field.vars.help %}
                    <p class="mt-2 text-slate-400 text-sm">{{ field.vars.help }}</p>
                {% endif %}
            </div>
        {% endfor %}
    </div>

    {{ form_widget(form._token) }}

    <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-slate-700/50">
        <button type="submit" class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-cyan-500 hover:from-blue-700 hover:to-cyan-600 text-white font-semibold rounded-xl shadow-lg shadow-blue-500/30 transition-all duration-300 hover:scale-[1.02] hover:shadow-blue-500/40">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_vehicle_index') }}" class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-slate-700/50 hover:bg-slate-700 text-slate-300 hover:text-white font-medium rounded-xl border border-slate-600/50 transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Annuler
        </a>
    </div>
{{ form_end(form) }}

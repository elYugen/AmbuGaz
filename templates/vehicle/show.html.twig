{% extends 'base.html.twig' %}

{% block title %}Véhicule - {{ vehicle.name }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-6">
            <a href="{{ path('app_vehicle_index') }}" class="inline-flex items-center gap-2 text-slate-400 hover:text-cyan-400 transition-colors duration-200">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Retour à la liste
            </a>
        </nav>

        <!-- Vehicle Card -->
        <div class="bg-slate-800/50 backdrop-blur-xl rounded-2xl border border-slate-700/50 shadow-2xl overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-600/20 to-cyan-500/20 border-b border-slate-700/50 px-8 py-6">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div class="flex items-center gap-4">
                        <div class="bg-gradient-to-r from-blue-500 to-cyan-400 p-3 rounded-xl shadow-lg shadow-blue-500/30">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                            </svg>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-white">{{ vehicle.name }}</h1>
                            <span class="inline-flex items-center px-3 py-1 mt-2 rounded-full text-sm font-semibold bg-blue-500/20 text-blue-400 border border-blue-500/30">
                                {{ vehicle.licensePlate }}
                            </span>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}" 
                           class="inline-flex items-center gap-2 px-4 py-2 bg-amber-500/20 hover:bg-amber-500/30 text-amber-400 font-medium rounded-xl border border-amber-500/30 transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Modifier
                        </a>
                    </div>
                </div>
            </div>

            <!-- Details Grid -->
            <div class="p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- ID -->
                    <div class="bg-slate-700/30 rounded-xl p-4 border border-slate-600/30">
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-slate-600/50 rounded-lg">
                                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-slate-400">Identifiant</p>
                                <p class="text-lg font-semibold text-white font-mono">#{{ vehicle.id }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Model -->
                    <div class="bg-slate-700/30 rounded-xl p-4 border border-slate-600/30">
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-slate-600/50 rounded-lg">
                                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-slate-400">Modèle</p>
                                <p class="text-lg font-semibold text-white">{{ vehicle.model }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Year of Service -->
                    <div class="bg-slate-700/30 rounded-xl p-4 border border-slate-600/30">
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-slate-600/50 rounded-lg">
                                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-slate-400">Année de mise en service</p>
                                <p class="text-lg font-semibold text-white">{{ vehicle.yearOfService }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- License Plate -->
                    <div class="bg-slate-700/30 rounded-xl p-4 border border-slate-600/30">
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-slate-600/50 rounded-lg">
                                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-slate-400">Plaque d'immatriculation</p>
                                <p class="text-lg font-semibold text-blue-400">{{ vehicle.licensePlate }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Technical Inspection -->
                    <div class="bg-slate-700/30 rounded-xl p-4 border border-slate-600/30">
                        <div class="flex items-center gap-3">
                            <div class="p-2 rounded-lg {{ vehicle.technicalInspectionDate ? 'bg-emerald-500/20' : 'bg-red-500/20' }}">
                                <svg class="w-5 h-5 {{ vehicle.technicalInspectionDate ? 'text-emerald-400' : 'text-red-400' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-slate-400">Contrôle technique</p>
                                {% if vehicle.technicalInspectionDate %}
                                    <p class="text-lg font-semibold text-emerald-400">{{ vehicle.technicalInspectionDate|date('d/m/Y') }}</p>
                                {% else %}
                                    <p class="text-lg font-semibold text-red-400">Non renseigné</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Insurance -->
                    <div class="bg-slate-700/30 rounded-xl p-4 border border-slate-600/30">
                        <div class="flex items-center gap-3">
                            <div class="p-2 rounded-lg {{ vehicle.insuranceDate ? 'bg-emerald-500/20' : 'bg-red-500/20' }}">
                                <svg class="w-5 h-5 {{ vehicle.insuranceDate ? 'text-emerald-400' : 'text-red-400' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-slate-400">Date d'assurance</p>
                                {% if vehicle.insuranceDate %}
                                    <p class="text-lg font-semibold text-emerald-400">{{ vehicle.insuranceDate|date('d/m/Y') }}</p>
                                {% else %}
                                    <p class="text-lg font-semibold text-red-400">Non renseignée</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Actions -->
            <div class="border-t border-slate-700/50 px-8 py-5 bg-slate-800/30">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <a href="{{ path('app_vehicle_index') }}" 
                       class="inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors duration-200">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Retour à la liste
                    </a>
                    <div class="flex items-center gap-3">
                        <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}" 
                           class="inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-blue-600 to-cyan-500 hover:from-blue-700 hover:to-cyan-600 text-white font-semibold rounded-xl shadow-lg shadow-blue-500/30 transition-all duration-300 hover:scale-105">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Modifier
                        </a>
                        {{ include('vehicle/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
